{
  "exclude": ["**/dist/**", "**/node_modules/**", "**/tests/**"],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "es5", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "preserveSymlinks": true,
    "preserveWatchOutput": true,
    "pretty": false,
    "sourceMap": true,
    "target": "es6",
    "strict": true,
    "outDir": "./lib/",
    "composite": true
  },
  "exclude": [
    "./node_modules/",
    "./lib/",
    "./config/",
    "deploy",
    "./tmp.ts",
    "./hardhat.config.ts"
  ],
  "include": ["index.ts", "./src/*.ts", "./src/factories/*.ts"]
}
